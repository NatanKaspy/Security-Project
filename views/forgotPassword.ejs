<%- include('partials/header')-%>

<div class="form">
  <h2>Reset Password</h2> 
  <form action="/user/forgotPassword" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input name="username" type="email" class="form-control" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll send you a new password.</small>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form> 
</div>


